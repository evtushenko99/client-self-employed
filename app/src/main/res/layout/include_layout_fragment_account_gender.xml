<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/include_layout_fragment_account_male"
        style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Мужской" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/include_layout_fragment_account_female"
        style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include_layout_fragment_account_male"
        android:layout_alignStart="@+id/include_layout_fragment_account_male"
        android:layout_alignEnd="@+id/include_layout_fragment_account_male"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:text="Женский" />

</RelativeLayout>