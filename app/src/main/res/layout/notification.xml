<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <ImageView
        android:id="@+id/notification_expert_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_notifications_black_24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/notification_expert_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/notification_expert_image"
        android:layout_marginStart="@dimen/margin_high"
        android:layout_toEndOf="@id/notification_expert_image"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        tools:text="Подкатка" />

    <TextView
        android:id="@+id/notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_expert_name"
        android:layout_alignStart="@+id/notification_expert_name"

        android:layout_toEndOf="@id/notification_expert_name"
        tools:text="Начало занятия через 30 минут" />


</RelativeLayout>